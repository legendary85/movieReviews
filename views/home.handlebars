{{!-- Cards with save button --}}
<div class="container-fluid article-container">
  {{#if article}}
  {{#each article}}
  <div data-_id={{this._id}} class="card"></div>
  <div class="car-header">
    <h3>
      <button type="button" id="save-button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"
        data-whatever="@mdo">Save Article</button>
      {{!-- <a class="btn btn-success save">Save Article</a> --}}
      <a class="article-link" target="_blank" rel="noopener noreferrer" href={{this.reviewLink}}>{{this.movieTitle}}</a>
    </h3>
  </div>
  <div class="card-body">{{this.review}}</div>
</div>
{{/each}}
{{!-- /each --}}
</div>
{{else}}
<div class="alert alert-warning text-center">
  <h4>No New Articles</h4>
</div>
